{
  "compilerOptions": {
    "typeRoots": [ "./node_modules/@types", "./types"],
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "lib": ["es2017"],
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "./types/*"]
    }
  },
  "include": ["**/*.d.ts", "**/*.ts"],
  "exclude": ["node_modules"]
}
